<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Disconnect"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="Ana sayfaya dön"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRefresh"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Humi"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTime" />

    <EditText
        android:id="@+id/Heat"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Humi" />

    <EditText
        android:id="@+id/Metan"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heat" />

    <TextView
        android:id="@+id/txtMetan"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="Metan    :"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/Metan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHeat" />

    <TextView
        android:id="@+id/txtHumi"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:text="Nem      :"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/Humi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTime" />

    <TextView
        android:id="@+id/txtHeat"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="Sıcaklık :"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/Heat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHumi" />

    <EditText
        android:id="@+id/txtTime"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:inputType="time"
        app:layout_constraintEnd_toStartOf="@+id/txtDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDate"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTime"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkAlarm"
        android:layout_width="203dp"
        android:layout_height="69dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="32dp"
        android:text="Alarm     Açık/Kapalı"
        app:layout_constraintBottom_toTopOf="@+id/Led1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMetan" />

    <ImageButton
        android:id="@+id/Led1"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/led"
        app:layout_constraintBottom_toTopOf="@+id/Disconnect"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/Led2"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/led"
        app:layout_constraintBottom_toTopOf="@+id/Disconnect"
        app:layout_constraintEnd_toStartOf="@+id/Led3"
        app:layout_constraintStart_toEndOf="@+id/Led1" />

    <ImageButton
        android:id="@+id/Led3"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/led"
        app:layout_constraintBottom_toTopOf="@+id/btnRefresh"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        android:text="LED 1"
        app:layout_constraintBottom_toTopOf="@+id/Disconnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Led1" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="32dp"
        android:text="LED 2"
        app:layout_constraintBottom_toTopOf="@+id/Disconnect"
        app:layout_constraintEnd_toStartOf="@+id/Led3"
        app:layout_constraintStart_toEndOf="@+id/Led2"
        app:layout_constraintTop_toBottomOf="@+id/Led2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="32dp"
        android:text="LED 3"
        app:layout_constraintBottom_toTopOf="@+id/btnRefresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Led3" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Yenile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Disconnect" />

</android.support.constraint.ConstraintLayout>